<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rps.gui.controller.GameViewController">
   <children>
      <TextField fx:id="botPoints" alignment="CENTER" editable="false" layoutX="355.0" layoutY="90.0" styleClass="fields" />
      <Button fx:id="moveRock" layoutX="62.0" layoutY="311.0" mnemonicParsing="false" onAction="#playerMoveRock" prefHeight="40.0" prefWidth="120.0" styleClass="rock" text="Rock" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <Button fx:id="movePaper" layoutX="240.0" layoutY="311.0" mnemonicParsing="false" onAction="#playerMovePaper" prefHeight="40.0" prefWidth="120.0" styleClass="paper" text="Paper" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <Button fx:id="moveScissors" layoutX="418.0" layoutY="311.0" mnemonicParsing="false" onAction="#playerMoveScissors" prefHeight="40.0" prefWidth="120.0" styleClass="scissor" text="Scissors" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <Label layoutX="139.0" layoutY="214.0" text="Your move:" textFill="WHITE">
         <font>
            <Font name="Calibri" size="12.0" />
         </font></Label>
      <Label layoutX="402.0" layoutY="214.0" text="Bot move:" textFill="WHITE">
         <font>
            <Font name="Calibri" size="12.0" />
         </font></Label>
      <TextField fx:id="playerMoveTextField" alignment="CENTER" editable="false" layoutX="95.0" layoutY="243.0" styleClass="fields" />
      <TextField fx:id="botMoveTextField" alignment="CENTER" editable="false" layoutX="355.0" layoutY="243.0" styleClass="fields" />
      <TextField fx:id="playerPoints" alignment="CENTER" editable="false" layoutX="95.0" layoutY="90.0" styleClass="fields" />
      <Label layoutX="137.0" layoutY="54.0" text="Your points:" textFill="WHITE">
         <font>
            <Font name="Calibri" size="12.0" />
         </font></Label>
      <Label layoutX="401.0" layoutY="54.0" text="Bot points:" textFill="WHITE">
         <font>
            <Font name="Calibri" size="12.0" />
         </font></Label>
   </children>
</AnchorPane>
